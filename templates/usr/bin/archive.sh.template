#!/usr/bin/env bash

set -e

PATH_TO_FILE=$1
WAL_FILE_NAME=$2

test ! -f __ARCHIVE_DIRECTORY__/$WAL_FILE_NAME
echo "cp $DATA_DIRECTORY/$PATH_TO_FILE __ARCHIVE_DIRECTORY__/$WAL_FILE_NAME"
cp $DATA_DIRECTORY/$PATH_TO_FILE __ARCHIVE_DIRECTORY__/$WAL_FILE_NAME
find __ARCHIVE_DIRECTORY__/* -mtime +2 -exec rm {} \;

